{
  "manifest_version": 2,

  "name": "Wirehead",
  "description": "This app helps you maintain your focus on the internet",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "options_page": "dashboard.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "history",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/*",
    "contextMenus",
    "cookies"
  ],
  "incognito": "split",
  "minimum_chrome_version": "55",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.bundle.js", "dashboard.bundle.js"],
      "run_at": "document_start"
    }
  ]
}
