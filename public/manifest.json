{
  "manifest_version": 2,

  "name": "Wirehead",
  "description": "This app helps you maintain your focus on the internet",
  "version": "0.0.1",
  "icons": {
    "16": "gray.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "options_page": "dashboard.html",
  "background": {
    "scripts": ["eventPage.bundle.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "history",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/*",
    "contextMenus",
    "cookies"
  ],
  "incognito": "split",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "minimum_chrome_version": "55",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": ["dashboard.html"]
}
